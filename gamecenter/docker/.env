# Police Thief Game Server Environment Configuration

# Redis Configuration
redis_host=redis
redis_port=6379

# Server Network Configuration
grpc_host=0.0.0.0
grpc_port=50051
tcp_host=0.0.0.0
tcp_port=4000
udp_host=0.0.0.0
udp_port=5000

# Database Configuration
db_host=localhost
db_id=root
db_password=your_database_password
db_name=police

# Security Configuration
JWT_SECRET_KEY=your_production_secret_key_minimum_256_bits_required_change_this_in_production

# Server Feature Toggles
ENABLE_GRPC=true
ENABLE_TCP=true
ENABLE_RUDP=true
ENABLE_MONITORING=true

# Logging Configuration
RUST_LOG=info
RUST_BACKTRACE=1

# Performance Configuration
RUST_MIN_STACK=8388608  # 8MB stack size

# Game Configuration
MAX_CONCURRENT_PLAYERS=500
TICK_RATE=60
NETWORK_LATENCY_WARNING_THRESHOLD_MS=100

# Redis Session Configuration
SESSION_TTL_SECS=3600
CONNECTION_POOL_SIZE=10
CONNECTION_TIMEOUT_SECS=5

# Monitoring Configuration
METRICS_RETENTION_HOURS=24
ENABLE_SYSTEM_MONITORING=true
ENABLE_GAME_MONITORING=true