# Police Thief Game Server - Environment Configuration Template
# 이 파일을 .env로 복사하고 실제 값들로 수정하세요

# host 관련
redis_host=127.0.0.1
redis_port=6379
redis_password=SecureRedisAuth2024!StrongPassword123

grpc_host=127.0.0.1
grpc_port=50051

tcp_host=127.0.0.1
tcp_port=4000

udp_host=127.0.0.1
udp_port=5000

# JWT 토큰 관련 - 강화된 보안 설정
# ⚠️ 필수: 32자 이상의 암호화 보안 키 사용
# 예시: openssl rand -hex 32
JWT_SECRET_KEY=k9X7mR5nQ2pL8vW3dF6yH1jS4bN0cT9xE8aZ5qI2uY7rV3gK6hM1wJ4nP8sL9tG3
JWT_ALGORITHM=HS256
# 보안상 짧은 만료시간 권장 (1-24시간)
JWT_EXPIRATION_HOURS=1
# 리프레시 토큰 만료시간 (7-30일)
JWT_REFRESH_EXPIRATION_DAYS=7

# 데이터베이스 연결 - 보안 강화
db_host=localhost
db_port=3306
db_id=police_user
db_password=SecureDbPass2024!@#Strong16CharMinimum
db_name=police
db_ssl_mode=required

# 보안 설정 - 강화된 기본값
# 초당 요청 수 제한 (보안상 낮게 설정)
RATE_LIMIT_RPM=60
# 최대 메시지 크기 (32KB = 32768 바이트)
MAX_MESSAGE_SIZE=32768
# BCrypt 라운드 수 (10-15 권장, 12가 최적)
BCRYPT_ROUNDS=12
# CORS 허용 도메인 (콤마로 구분)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3001

# 모니터링 및 로깅
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# 성능 튜닝
CONNECTION_POOL_SIZE=10
REDIS_POOL_SIZE=20
WORKER_THREADS=0  # 0 = auto-detect CPU cores

# 소셜 로그인 API 키
# 카카오 로그인
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here
KAKAO_REDIRECT_URI=http://localhost:8080/auth/kakao/callback

# 구글 로그인
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# 애플 로그인
APPLE_CLIENT_ID=com.yourcompany.policethief
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_KEY_ID=your_apple_key_id_here
APPLE_PRIVATE_KEY_PATH=./keys/apple_private_key.p8
APPLE_REDIRECT_URI=http://localhost:8080/auth/apple/callback